---
import type { Locale } from '../i18n/translations';
import { t } from '../i18n/translations';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const items = [
  { title: t('privacy.audio.title', locale), desc: t('privacy.audio.desc', locale) },
  { title: t('privacy.network.title', locale), desc: t('privacy.network.desc', locale) },
  { title: t('privacy.telemetry.title', locale), desc: t('privacy.telemetry.desc', locale) },
  { title: t('privacy.permissions.title', locale), desc: t('privacy.permissions.desc', locale) },
];

const githubUrl = 'https://github.com/Magnus-Gille/sagascript';
---

<section id="privacy" class="privacy">
  <div class="container">
    <h2>{t('privacy.title', locale)}</h2>
    <p class="intro">{t('privacy.intro', locale)}</p>

    <div class="privacy-grid">
      {items.map((item) => (
        <div class="privacy-item">
          <div class="check-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>
          </div>
          <div>
            <h3>{item.title}</h3>
            <p>{item.desc}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="opensource">
      <p>{t('privacy.opensource', locale)}</p>
      <a href={githubUrl} class="github-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        {t('privacy.github', locale)}
      </a>
    </div>
  </div>
</section>

<style>
  .privacy {
    border-top: 1px solid var(--border);
    background: var(--bg-secondary);
  }

  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 12px;
  }

  .intro {
    text-align: center;
    color: var(--text-muted);
    max-width: 560px;
    margin: 0 auto 48px;
    font-size: 1.05rem;
  }

  .privacy-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 28px 40px;
    max-width: 900px;
    margin: 0 auto;
  }

  .privacy-item {
    display: flex;
    gap: 14px;
    align-items: flex-start;
  }

  .check-icon {
    flex-shrink: 0;
    color: var(--accent);
    margin-top: 2px;
  }

  .privacy-item h3 {
    font-size: 1rem;
    margin-bottom: 4px;
  }

  .privacy-item p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .opensource {
    text-align: center;
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid var(--border);
  }

  .opensource p {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-bottom: 12px;
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .github-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .privacy-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>
